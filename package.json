{
    "name": "starter-react4xp",
    "version": "2.1.0",
    "description": "React4xp starter for Enonic XP7.0",
    "scripts": {
        "browserSync": "npx browser-sync start --proxy 'localhost:8080' --files build/resources/main/**/* --reload-delay 15000",
        "build": "./gradlew build --info",
        "build:react4xp": "npm-run-all --parallel build:react4xp:client build:react4xp:components build:react4xp:externals build:react4xp:nashornPolyfills",
        "build:react4xp:client": "npm explore @enonic/react4xp -- npm run webpack:client -- --env DIR_PATH_ABSOLUTE_PROJECT=$PWD",
        "build:react4xp:components": "npm explore @enonic/react4xp -- npm run webpack:components -- --env DIR_PATH_ABSOLUTE_PROJECT=$PWD",
        "build:react4xp:externals": "npm explore @enonic/react4xp -- npm run webpack:externals -- --env DIR_PATH_ABSOLUTE_PROJECT=$PWD",
        "build:react4xp:nashornPolyfills": "npm explore @enonic/react4xp -- npm run webpack:nashornPolyfills -- --env DIR_PATH_ABSOLUTE_PROJECT=$PWD",
        "clean": "rm -r build 2>/dev/null; true",
        "clean:gradle": "./gradlew clean --refresh-dependencies  --info",
        "dev": "npm run redeploy && npm run watch:all",
        "deploy": "./gradlew deploy --info",
        "install:dev": "nsi",
        "install:prod": "npm install",
        "rebuild": "npm run clean && npm run build",
        "redeploy": "npm run rebuild && npm run deploy",
        "watch": "npm-run-all --parallel watch:xp:babel watch:gradle:react4xp",
        "watch:all": "npm-run-all --parallel watch:gradle watch:xp:babel watch:gradle:react4xp",
        "watch:gradle": "./gradlew deploy --info -t",
        "watch:gradle:react4xp": "./gradlew react4xpComponents react4xpExternals react4xpClient react4xpNashornPolyfills --info -t",
        "watch:react4xp:old": "npx webpack --config node_modules/@enonic/react4xp/buildComponents/webpack.config.js --progress --watch",
        "watch:xp:babel": "npx babel src/main/resources --out-dir build/resources/main --ignore **/*.jsx --watch"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/enonic/starter-react4xp.git"
    },
    "author": "Espen Norderud",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/enonic/starter-react4xp/issues"
    },
    "homepage": "https://github.com/enonic/starter-react4xp#readme",
    "dependencies": {
        "@enonic/js-utils": "^0.34.3",
        "@enonic/react-components": "^3.0.1",
        "node-fetch": "^3.2.3",
        "prop-types": "^15.8.1",
        "react": "^18.0.0",
        "react-dom": "^18.0.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.17.6",
        "@babel/compat-data": "^7.17.7",
        "@babel/core": "^7.17.9",
        "@babel/plugin-proposal-class-properties": "^7.16.7",
        "@babel/plugin-proposal-object-rest-spread": "^7.17.3",
        "@babel/plugin-transform-arrow-functions": "^7.16.7",
        "@babel/preset-env": "^7.16.11",
        "@babel/preset-react": "^7.16.7",
        "@enonic/react4xp": "^3.0.5",
        "babel": "^6.23.0",
        "babel-loader": "^8.2.5",
        "browser-sync": "^2.27.9",
        "npm-run-all": "^4.1.5",
        "webpack": "^5.72.0",
        "webpack-cli": "^4.9.2"
    },
    "babel": {
        "presets": [
            "@babel/preset-env"
        ],
        "plugins": [
            "@babel/plugin-proposal-object-rest-spread",
            "@babel/plugin-transform-arrow-functions"
        ]
    }
}
