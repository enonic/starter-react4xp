<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part>
	<display-name>04 - Chaining Example</display-name>
    <description>Controlled config, several and wrapped shared components, inserted into a pre-rendered Thymeleaf view</description>
	<form>
        <input name="greeting" type="TextLine">
            <label>Greeting</label>
            <occurrences minimum="1" maximum="1"/>
            <default>Hello</default>
        </input>
        <input name="greetee1" type="TextLine">
            <label>Who should we greet first?</label>
            <occurrences minimum="1" maximum="1"/>
            <default>world</default>
        </input>
        <input name="greetee2" type="TextLine">
            <label>And after that?</label>
            <occurrences minimum="1" maximum="1"/>
            <default>otherworld</default>
        </input>
    </form>
</part>
